{
    "name": "twigstan/twigstan",
    "description": "TwigStan is a static analyzer for Twig templates powered by PHPStan",
    "require": {
        "php": "^8.3",
        "twig/twig": "^3.13",
        "symfony/console": "^7.1",
        "symfony/process": "^7.1",
        "nette/di": "^3.2",
        "nette/bootstrap": "^3.2",
        "composer-runtime-api": "^2.2",
        "symfony/filesystem": "^7.1",
        "nikic/php-parser": "^4.13.0",
        "symfony/finder": "^7.1",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpdoc-parser": "^1.30",
        "nette/neon": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.59",
        "phpstan/extension-installer": "^1.4",
        "ticketswap/phpstan-error-formatter": "^1.0",
        "symfony/var-dumper": "^7.1",
        "symfony/http-kernel": "^7.1",
        "symfony/routing": "^7.1",
        "symfony/twig-bridge": "^7.1",
        "symfony/framework-bundle": "^7.1",
        "shipmonk/composer-dependency-analyser": "^1.7",
        "symfony/http-foundation": "^7.1",
        "phpstan/phpstan-strict-rules": "^1.6",
        "phpstan/phpstan-deprecation-rules": "^1.2"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TwigStan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TwigStan\\": "tests/"
        }
    },
    "keywords": [
        "static analysis"
    ],
    "bin": [
        "bin/twigstan"
    ],
    "config": {
        "preferred-install": {
            "twig/twig": "source",
            "*": "dist"
        },
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix --diff --ansi",
        "dependencies": "vendor/bin/composer-dependency-analyser"
    }
}
